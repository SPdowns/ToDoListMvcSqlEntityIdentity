@{
  Layout = "_Layout";
}

@model ToDoListMvcSqlEntityIdentity.Models.Item

<h3>Add a new task</h3>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.DueDate)
    @Html.TextBoxFor(model => model.DueDate, new { @type = "datetime-local"})

    @Html.Label("Select category")
    @Html.DropDownList("CategoryId")

    <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>